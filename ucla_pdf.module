/**
 * Check that our streams exist, before showing the paths. 
 *
 *  @param $object FedoraObject
 *    Tuque object containing the datastream
 *  @param $dsid string
 *    The id of the datastream in the Tuque object
 */
function ucla_pdf_access($object = NULL, $dsid = NULL) {
  return in_array('ucla:TahrirPdfCModel', $object->models) && isset($object[$dsid]) && islandora_access_callback($object, FEDORA_VIEW);
}

/**
 *  Page callback to download a string of text contained in a datastream.
 *
 *  @param $object FedoraObject
 *    Tuque object containing the datastream
 *  @param $dsid string
 *    The id of the datastream in the Tuque object that contains the text
 */
function ucla_pdf_download_translation($object, $dsid) {
  module_load_include('inc', 'ucla_pdf', 'ucla_pdf');
  ucla_pdf_serve_text_as_file($object[$dsid]->content, "translation.txt");
  return NULL;
}

/**
 *  Page callback to view the translation of a pdf.
 *
 *  @param $object FedoraObject
 *    Tuque object containing the datastream
 *  @param $dsid string
 *    The id of the datastream in the Tuque object that contains the text
 */
function ucla_pdf_view_translation($object, $dsid) {
  module_load_include('inc', 'ucla_pdf', 'ucla_pdf');
  $out = ucla_pdf_format_datastream_text($object, $dsid);
  $out .= "<br/><a href='download_translation'>Download as txt</a>";
  return $out; 
}

/**
 *  Page callback to view the transcription of a pdf.
 *
 *  @param $object FedoraObject
 *    Tuque object containing the datastream
 *  @param $dsid string
 *    The id of the datastream in the Tuque object that contains the text
 */
function ucla_pdf_view_transcription($object, $dsid) {
  module_load_include('inc', 'ucla_pdf', 'ucla_pdf');
  return ucla_pdf_format_datastream_text($object, $dsid);
}
